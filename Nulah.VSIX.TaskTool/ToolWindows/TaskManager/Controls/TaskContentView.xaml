        <TextBlock.Style>
            <Style TargetType="TextBlock">
                <Style.Setters>
                    <Setter Property="Background" Value="{StaticResource TaskDefault_Background}"/>
                </Style.Setters>
            </Style>
        </TextBlock.Style>
    </TextBlock>-->
</UserControl>
